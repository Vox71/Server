pipeline {
    agent none

    stages {
        stage('Build') {
            agent { label 'local' } 
            steps {
                script {
                    sh 'docker-compose build --no-cache'
                }
            }
        }

        stage('Deploy') {
            agent { label 'debdeb_agent' }
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }
    }
     
}