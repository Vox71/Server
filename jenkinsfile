pipeline {
    agent none // Указываем, что не используем общий агент для всех этапов

    stages {
        stage('Build') {
            agent { label 'debdeb_agent' } // Сборка на агенте master
            steps {
                script {
                    // Выполнение команды для сборки проекта
                    sh 'docker-compose build --no-cache'
                }
            }
        }

        stage('Deploy') {
            agent { label 'local' } // Деплой на агенте debdeb_agent
            steps {
                script {
                    // Выполнение команды для деплоя проекта
                    sh 'docker-compose up -d'
                }
            }
        }
    }
     
}